#!/bin/bash

selected=`cat ~/.tmux/cht.sh/tmux-cht-languages ~/.tmux/cht.sh/tmux-cht-command | fzf`
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if grep -qs "$selected" ~/.tmux/.tmux-cht-languages; then
    query=`echo $query | tr ' ' '+'`
    tmux split-window -v bash -c "echo \"curl cht.sh/$selected/$query/\" & curl cht.sh/$selected/$query & while [ : ]; do sleep 1; done"
else
    tmux split-window -v bash -c "curl -s cht.sh/$selected~$query | less -R"
fi
