#!/usr/bin/env bash

NVIM_STABLE_DEB_RELEASE_ARTIFACT="https://github.com/neovim/neovim/releases/download/stable/nvim-linux64.deb"

wget $NVIM_STABLE_DEB_RELEASE_ARTIFACT -P ~/.dotfiles/tmp
sudo apt install ~/.dotfiles/tmp/nvim-linux64.deb

