#!/usr/bin/env bash

OS=$(uname -s)

stow -vt ~ aliases
stow -vt ~ fish
stow -vt ~ gh
stow -vt ~ hammerspoon

case "$OS" in
    "Darwin")
        cd iterm2
        stow -vt ~ mac
        cd ..
        stow -vt ~ yabai
        ;;
    *)
        echo "Unable to determine OS. Setup iTerm2 manually."
        ;;
esac

stow -vt ~ karabiner
stow -vt ~ kitty
stow -vt ~ nvim
stow -vt ~ ssh
stow -vt ~ tmux
stow -vt ~ vscode
cp git/hooks/post-commit .git/hooks/

# Remove the hooks directory that is stowed
cd ~
rm -rf hooks
