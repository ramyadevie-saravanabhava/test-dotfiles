echo >&2 "====================================================================="
echo >&2 " Setting up codespaces environment"
echo >&2 ""
echo >&2 " USER        $USER"
echo >&2 " HOME        $HOME"
echo >&2 "====================================================================="

# I'd like to use fish, please
sudo apt-get install -y fish
sudo chsh -s /usr/bin/fish $USER

echo "-------DONE SETUP-------"
